<%= form_for @painting, :html => {:multipart => true} do |f| %>
  <%= f.hidden_field :user_id %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :credits %><br />
    <%= f.text_field :credits %>
  </p>
  <p>
    <%= f.label :category %><br />
    <%= select("category", "id", @categories.each.collect {|category| [ category.name, category.id ] }, {:include_blank => 'choose a category'}) %>
  </p>
  <p>
    <%= f.label :inspiration %><br />
    <%= f.text_area :inspiration %>
  </p>
  <p>
    <%= f.label :image %><br />
    <%= f.file_field :image %>
  </p>
  <p><%= f.submit  %></p>
<% end %>

