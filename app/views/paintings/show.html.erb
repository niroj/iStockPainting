<div class = "two-third">
  <div class="painting">
    <h2><%= @painting.title %></h2>
    <%= image_tag @painting.image_url(:scaled_image) if @painting.image? %><br />
    <span class="price" ><b>Price:</b> <%= @painting.credits%> credits</span>
    <% if current_user.id == @painting.user_id %>
      <span class="action_painting" id = "buy"><%= link_to "Update Painting Info", edit_painting_path%></span>
    <%else%>
      <span class="action_painting"><%= link_to "Buy this Painting", buy_painting_path, :remote => "true"%></span>
    <%end%>
    <div class = "inspiration">Artist Inspiration:<br />
      <%= @painting.inspiration %>
    </div>
  </div>
</div>
<%= render "sidebar" %>

